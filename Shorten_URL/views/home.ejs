<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>URL Shortener</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }
  </style>
</head>
<body>
  <h1>URL Shortener</h1>

  <!-- Display generated URL if available -->
  <% if (locals.id) { %>
    <p>URL Generated: <a href="http://localhost:8001/url/<%= id %>">http://localhost:8001/url/<%= id %></a></p>
  <% } %>

  <!-- URL input form -->
  <div>
    <form method="POST" action="/url">
      <label for="urlInput">Enter your original URL:</label>
      <input type="text" id="urlInput" name="url" placeholder="https://example.com" />
      <button type="submit">Generate</button>
    </form>
  </div>

  <!-- Display URL analytics if available -->
  <% if (locals.urls && locals.urls.length > 0) { %>
    <h2>URL Analytics</h2>
    <table>
      <thead>
        <tr>
          <th>S. No</th>
          <th>Short ID</th>
          <th>Original URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% locals.urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><a href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No URLs available.</p>
  <% } %>
</body>
</html>
